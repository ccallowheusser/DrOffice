<h1>Doctors</h1>

<table>
  <thead>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>Specialty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.lastNameD %></td>
        <td><%= doctor.firstNameD %></td>
        <td><%= doctor.specialty %></td>
        <td><%= link_to 'Show Doctor', doctor %></td>
        <td><%= link_to 'Edit Doctor', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Delete Doctor', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />

